	language = {en},
	urldate = {2023-11-10},
	journal = {IEEE Journal of Selected Topics in Applied Earth Observations and Remote Sensing},
	author = {Wang, Bin and Yao, Huizheng and Song, Dongmei and Zhang, Jie and Gao, Han},
