	journal = {Remote Sensing},
	author = {Liu, Zijing and Min, Min and Li, Jun and Sun, Fenglin and Di, Di and Ai, Yufei and Li, Zhenglong and Qin, Danyu and Li, Guicai and Lin, Yinjing and Zhang, Xiaolin},
	year = {2019},
