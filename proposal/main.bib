	author = {Ma, Jiaqi and Zhao, Zhe and Yi, Xinyang and Chen, Jilin and Hong, Lichan and Chi, Ed H.},
	month = jul,
	year = {2018},
	keywords = {mixture of experts, multi-task learning, neural network, recommendation system},
	pages = {1930--1939},
	file = {Full Text PDF:/Users/mtdodson/Zotero/storage/KKP4LIYP/Ma et al. - 2018 - Modeling Task Relationships in Multi-task Learning.pdf:application/pdf},
}

